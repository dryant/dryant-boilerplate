{
  "name": "dryant-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate para iniciar rÃ¡pidamente proyectos de desarrollo web HTML y CSS con Sass, Parcel y herramientas de postprocesamiento como PostCSS y PostHTML.",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"**/*.html\" \"**/*.css\"",
    "clean": "rimraf dist/*",
    "parcel:serve": "parcel src/index.html -p 8123 --target web --open",
    "parcel:build": "parcel build src/index.html --target web --no-source-maps --no-cache",
    "dev": "npm-run-all clean parcel:serve",
    "build": "npm-run-all clean parcel:build",
    "start": "parcel serve index.html",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "web": "dist/index.html",
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./",
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dryant/dryant-boilerplate.git"
  },
  "author": "dryant",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/dryant/dryant-boilerplate/issues"
  },
  "homepage": "https://github.com/dryant/dryant-boilerplate#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.3.1",
    "autoprefixer": "^10.4.17",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.3.1",
    "postcss": "^8.4.35",
    "posthtml": "^0.16.6",
    "posthtml-include": "^2.0.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.71.1"
  }
}
